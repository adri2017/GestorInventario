<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="OperacionesProd.OperacionesProd">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnagregarprod"
        android:layout_width="225dp"
        android:layout_height="58dp"
        android:background="@drawable/custom_btn"
        android:backgroundTint="#1F2859"
        android:text="Agregar Producto"
        android:textColor="#CACACA"
        app:layout_constraintBottom_toTopOf="@+id/btnborrarprod"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnborrarprod"
        android:layout_width="225dp"
        android:layout_height="58dp"
        android:background="@drawable/custom_btn"
        android:backgroundTint="#1F2859"
        android:text="Borrar Producto"
        android:textColor="#CACACA"
        app:layout_constraintBottom_toTopOf="@+id/btnactualizarprod"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnagregarprod" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnactualizarprod"
        android:layout_width="225dp"
        android:layout_height="58dp"
        android:background="@drawable/custom_btn"
        android:backgroundTint="#1F2859"
        android:text="Actualizar Producto"
        android:textColor="#CACACA"
        app:layout_constraintBottom_toTopOf="@+id/btnmostrarprod"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnborrarprod" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnmostrarprod"
        android:layout_width="225dp"
        android:layout_height="58dp"
        android:background="@drawable/custom_btn"
        android:backgroundTint="#1F2859"
        android:text="Mostrar Productos"
        android:textColor="#CACACA"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnactualizarprod" />

</androidx.constraintlayout.widget.ConstraintLayout>