<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="OperacionesPedido.OperacionesPed">

    <Button
        android:id="@+id/btnAgregarPed"
        android:layout_width="205dp"
        android:layout_height="60dp"
        android:background="@drawable/custom_btn"
        android:backgroundTint="#1F2859"
        android:text="Agregar Pedido"
        android:textColor="#CACACA"
        app:layout_constraintBottom_toTopOf="@+id/btnactped"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnactped"
        android:layout_width="205dp"
        android:layout_height="60dp"
        android:background="@drawable/custom_btn"
        android:backgroundTint="#1F2859"
        android:text="Actualizar Pedido"
        android:textColor="#CACACA"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnAgregarPed" />
</androidx.constraintlayout.widget.ConstraintLayout>